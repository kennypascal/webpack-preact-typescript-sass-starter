{
	"compilerOptions": {
		"sourceMap": true,
		"target": "es5",
		"jsx": "react",
		"jsxFactory": "h",
		"module": "commonjs",
		"moduleResolution": "node",
		"emitDecoratorMetadata": false,
		"experimentalDecorators": false,
		"declaration": false,
		"noUnusedLocals": true,
		"noImplicitAny": false,
		"noImplicitReturns": false,
		"removeComments": true,
		"strictNullChecks": false,
		"outDir": "build",
		"lib": ["es6", "es7", "dom"]
	},
	"exclude": ["dist", "build", "node_modules"]
}
